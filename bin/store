#!/usr/bin/env node

const argv = require('minimist')(process.argv.slice(2));
const logger = require('../config/logger');
const ics = require('../src');

ics(argv)
  .then(() => {
    logger.info('Changelog successfully created!');
    process.exit(0);
  })
  .catch((err) => {
    logger.error(err);
    process.exit(1);
  });
